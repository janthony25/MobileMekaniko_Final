@model MobileMekaniko_Final.Models.Dto.InvoiceDetailsDto

<!-- Car  Invoice Modals -->
<div class="modal fade" id="carInvoiceModal">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="carInvoiceModalTitle"></h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @Html.AntiForgeryToken()
                <div class="customer-car-details container">
                    <div class="invoice-customer-container d-flex justify-content-between align-items-center ">
                        <div>
                            <label asp-for="CustomerName"></label><br />
                            <input id="CustomerName" asp-for="CustomerName" class="form-control" />
                        </div>
                        <div>
                            <label asp-for="CarRego"></label><br />
                            <input id="CarRego" asp-for="CarRego" class="form-control" />
                        </div>
                    </div>
                </div>

                <div class="item-list-container container mt-5">
                    <h4>ITEM LIST</h4>
                    <div id="invoiceItems">

                    </div>

                    <button id="addItemButton" class="btn btn-primary">Add Item</button>
                </div>

                <div class="invoice-details d-flex justify-content-between align-items-center mt-5">
                    <div class="invoice-details-left">
                        <div class="mb-2">
                            <label asp-for="@Model.DateAdded"></label> <br />
                            <input id="DateAdded" asp-for="DateAdded" class="form-control" />
                        </div>
                        <div class="mb-2">
                            <label asp-for="@Model.DueDate"></label> <br />
                            <input id="DueDate" asp-for="DueDate" class="form-control" />
                        </div>
                        <div class="mb-2">
                            <label asp-for="@Model.IssueName"></label> <br />
                            <input id="IssueName" asp-for="IssueName" class="form-control" />
                        </div>
                        <div class="mb-2">
                            <label asp-for="@Model.PaymentTerm"></label> <br />
                            <input id="PaymentTerm" asp-for="PaymentTerm" class="form-control" />
                        </div>
                        <div class="mb-2">
                            <label asp-for="@Model.Notes"></label> <br />
                            <input id="Notes" asp-for="Notes" class="form-control" />
                        </div>
                    </div>

                    <div class="invoice-details-right d-flex justify-content-between align-items-center">
                        <div class="invoice-details-right-1">
                            <div class="mb-2">
                                <label asp-for="@Model.LabourPrice"></label> <br />
                                <input id="LabourPrice" asp-for="LabourPrice" class="form-control" />
                            </div>
                            <div class="mb-2">
                                <label asp-for="@Model.Discount"></label> <br />
                                <input id="Discount" asp-for="Discount" class="form-control" />
                            </div>
                            <div class="mb-2">
                                <label asp-for="@Model.ShippingFee"></label> <br />
                                <input id="ShippingFee" asp-for="ShippingFee" class="form-control" />
                            </div>
                            <div class="mb-2">
                                <label asp-for="@Model.SubTotal"></label> <br />
                                <input id="SubTotal" asp-for="SubTotal" class="form-control" readonly />
                            </div>
                        </div>
                        <div class="invoice-details-right-2">
                            <div class="mb-2">
                                <label asp-for="@Model.TotalAmount"></label> <br />
                                <input id="TotalAmount" asp-for="TotalAmount" class="form-control" readonly />
                            </div>
                            <div class="mb-2">
                                <label asp-for="@Model.AmountPaid"></label> <br />
                                <input id="AmountPaid" asp-for="AmountPaid" class="form-control" />
                            </div>
                            <div class="mb-2">
                                <label asp-for="@Model.isPaid"></label> <br />
                                <input id="isPaid" asp-for="isPaid" class="form-control" readonly />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>