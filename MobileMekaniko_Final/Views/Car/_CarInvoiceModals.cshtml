@model MobileMekaniko_Final.Models.Dto.InvoiceDetailsDto

<!-- Car  Invoice Modals -->
<div class="modal fade" id="carInvoiceModal">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="carInvoiceModalTitle"></h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @Html.AntiForgeryToken()
                <div class="customer-car-details container">
                    <div class="invoice-customer-container d-flex justify-content-between align-items-center ">
                        <div>
                            <label asp-for="CustomerName"></label><br />
                            <input id="CustomerName" asp-for="CustomerName" />
                        </div>
                        <div>
                            <label asp-for="CarRego"></label><br />
                            <input id="CarRego" asp-for="CarRego" />
                        </div>
                    </div>
                </div>

                <div class="item-list-container container mt-5">
                    <h4>ITEM LIST</h4>
                </div>

                <div class="invoice-details mt-5">
                    <div class="invoice-details-left">
                        <div class="mb-2">
                            <label asp-for="@Model.DateAdded"></label> <br />
                            <input  id="DateAdded" asp-for="DateAdded" />
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>