﻿<!-- Pagination Section -->
<div class="row mt-4">
    <div class="col-md-6 d-flex">
        <nav aria-label="Page navigation">
            <ul class="pagination">
                <li class="page-item @(!Model.HasPreviousPage ? "disabled" : "")">
                    <a class="page-link"
                       asp-action="@ViewData["PaginationAction"]"
                       asp-route-pageNumber="@(Model.PageIndex - 1)">Previous</a>
                </li>

                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                    <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                        <a class="page-link"
                           asp-action="@ViewData["PaginationAction"]"
                           asp-route-pageNumber="@i">@i</a>
                    </li>
                }

                <li class="page-item @(!Model.HasNextPage ? "disabled" : "")">
                    <a class="page-link"
                       asp-action="@ViewData["PaginationAction"]"
                       asp-route-pageNumber="@(Model.PageIndex + 1)">Next</a>
                </li>
            </ul>
        </nav>
    </div>
    <div class="col-md-6 text-end">
        <p class="text-muted">
            Showing @((Model.PageIndex - 1) * Model.PageSize + 1) to
            @(Math.Min(Model.PageIndex * Model.PageSize, Model.TotalItems))
            of @Model.TotalItems items
        </p>
    </div>
</div>