@model MobileMekaniko_Final.Models.Dto.CarDetailsDto

<!-- Add/Update/Delete Modal -->
<div class="modal fade" id="carActionModal">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="carModalTitle"></h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @Html.AntiForgeryToken()
                <input id="CustomerId" asp-for="CustomerId" type="hidden" />
                <input id="CarId" asp-for="CarId" type="hidden"/>
                <div class=" mb-2">
                    <label asp-for="CarRego"></label>
                    <input id="CarRego" asp-for="CarRego" class="form-control" />
                    <span id="CarRegoError" class="text-danger"></span>
                </div>

                @*Dropdown for Car Make*@
