                <div id="car-choose-carMake-container" class="mb-2">
                    <label class="form-label">Make</label>
                    <select class="form-select" id="makeIdSelection" name="MakeId" required>
                        <option value="" disabled selected>Select Car Make</option>
                        <!-- The MakeId should be populated here via your AJAX call -->
                    </select>
                    <span id="MakeIdError" class="text-danger"></span>
                </div>

               
                
                <div id="car-carModel-container" class=" mb-2">
                    <label asp-for="CarModel"></label>
                    <input id="CarModel" asp-for="CarModel" class="form-control" />
                    <span id="CarModelError" class="text-danger"></span>
                </div>
                <div id="car-carYear-container" class=" mb-2">
                    <label asp-for="CarYear"></label>
                    <input id="CarYear" asp-for="CarYear" class="form-control" />
                    <span id="CarYearError" class="text-danger"></span>
                </div>
                <div id="car-dateEdited-container" class="mb-2">
                    <label asp-for="DateEdited"></label>
                    <input type="text" id="DateEdited" asp-for="DateEdited" class="form-control" />
                    <span id="DateEditedError" class="text-danger"></span>
                </div>
                <div id="car-dateAdded-container" class="mb-2">
                    <label asp-for="DateAdded"></label>
                    <input type="text" id="DateAdded" asp-for="DateAdded" class="form-control" />
                    <span id="DateAddedError" class="text-danger"></span>
                </div>
                
            </div>
            <div class="modal-footer">
                <button type="submit" id="addCustomer" class="btn btn-primary">Add</button>
                <button type="submit" id="UpdateCustomer" class="btn btn-warning">Update</button>
                <button type="submit" id="DeleteCustomer" class="btn btn-danger">Delete</button>
            </div>
        </div>
    </div>
</div>