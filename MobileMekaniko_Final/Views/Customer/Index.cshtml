@model List<MobileMekaniko_Final.Models.Dto.CustomerListSummaryDto>

@{
    ViewData["Title"] = "CUSTOMERS";
}

<h4 class="text-center fw-bold mb-5 mt-5">@ViewData["Title"]</h4>


<div class="container d-flex justify-content-between align-items-center mb-2" style="padding:0;">
    <div class="">
        <button id="btnAddCustomer" class="btn btn-primary btn-add-customer" @* data-customer-id="0" data-action="addCustomer" *@ onclick="CustomerModal(0, 'addCustomer')"><i class="bi bi-plus-lg"></i> Customer</button>
    </div>

    <div class="">
        <input id="searchCustomerValue" placeholder="Search Customer" />
        <button id="btnSearchCustomer" class="btn btn-primary btn-sm ms-1" @* onclick="SearchCustomer();" *@><i class="bi bi-search "></i></button>

    </div>
</div>



<table class="table table-striped mt-4">
    <thead>
        <tr>
            <td class="text-center fw-bold">ID</td>
            <td class="text-center fw-bold">Customer Name</td>
            <td class="text-center fw-bold">Email Address</td>
            <td class="text-center fw-bold">Contact #</td>
            <td class="text-center"></td>
        </tr>
    </thead>
    <tbody id="customerTblBody">

    </tbody>
</table>

<partial name="_AddUpdateDeleteCustomerModal">

<script src="~/lib/jquery/dist/jquery.min.js"></script>

<script src="~/js/getcustomers.js"></script>